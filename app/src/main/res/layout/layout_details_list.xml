<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shape_gray_border_20">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simple_details_list_name"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:placeholderImage="@drawable/loading_01"
                app:failureImage="@drawable/image_load_failed"
                app:roundAsCircle="true"/>
            <TextView
                android:id="@+id/text_details_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/simple_details_list_name"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:text="111"/>
            <TextView
                android:id="@+id/text_details_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="6555"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/text_details_list_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="222"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_details_list_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundedCornerRadius="10dp"
            app:placeholderImage="@drawable/loading_01"
            app:failureImage="@drawable/image_load_failed"
            app:viewAspectRatio="0.9"/>
    </LinearLayout>

</LinearLayout>
