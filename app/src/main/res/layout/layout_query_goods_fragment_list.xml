<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_border_20"
        android:padding="10dp"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_query_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:viewAspectRatio="1.3"
            app:placeholderImage="@drawable/loading_01"
            app:failureImage="@drawable/image_load_failed"
            app:roundedCornerRadius="15dp"/>
    <TextView
        android:id="@+id/text_title_query_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:textSize="15sp"
        android:text="111"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_price_query_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cc00"
            android:textSize="20sp"
            android:text="ï¿¥111"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_number_query_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="111"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
