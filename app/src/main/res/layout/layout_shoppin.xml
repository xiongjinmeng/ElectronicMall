<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipmen"
    android:clickable="true"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_shoppin_box"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:background="@drawable/selector_shoppin_add_delsa"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/shape_rectangle_5"
            android:layout_marginLeft="20dp"
            android:padding="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/simp_shoppin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:placeholderImage="@drawable/loading_01"
                app:failureImage="@drawable/image_load_failed" />
            <TextView
                android:id="@+id/text_shoppin_title"
                android:layout_toRightOf="@id/simp_shoppin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="111"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/simp_shoppin"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/text_shoppin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:textColor="#cc00"
                    android:textSize="20sp"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_shoppin_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/text_shoppin_num"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#f2f2f2"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:text="1"/>
                <TextView
                    android:id="@+id/text_shoppin_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="+"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_shoppin_list"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:text="删除"
        android:textColor="#ffffff"
        android:background="@drawable/shape_rectangle_red_5"/>



</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
