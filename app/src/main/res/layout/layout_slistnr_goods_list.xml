<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_border_20"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"/>
        <TextView
            android:id="@+id/text_goods_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1111111"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_goods_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22222"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_goods_lists"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_listnr_goods_expr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_a_a_a"
            android:layout_marginLeft="10dp"
            android:text="555"/>
        <TextView
            android:id="@+id/text_a_a_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递公司"/>
        <TextView
            android:id="@+id/text_b_b_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_a_a_a"
            android:layout_marginTop="10dp"
            android:text="快递单号"/>
        <TextView
            android:id="@+id/text_listnr_goods_expresssn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_a_a_a"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/text_b_b_b"
            android:layout_marginLeft="10dp"
            android:text="666"/>
        <Button
            android:id="@+id/btn_listnr_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_rectangle_red_5"
            android:textColor="#ffffff"/>
    </RelativeLayout>


</LinearLayout>
