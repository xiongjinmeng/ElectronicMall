<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_5"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simp_listnr_comment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:roundedCornerRadius="5dp"
        app:placeholderImage="@drawable/loading_01"
        app:failureImage="@drawable/image_load_failed"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/text_listnr_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/text_listnr_comment_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#ff00"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_listnr_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_red_5"
                android:textColor="#ffffff"
                android:text="去评价"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
