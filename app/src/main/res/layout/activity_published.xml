<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ffffff"
    tools:context=".activtiy.PublishedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.8"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_5"
        android:padding="10dp"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_publish"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:roundedCornerRadius="5dp"
            app:placeholderImage="@drawable/loading_01"
            app:failureImage="@drawable/image_load_failed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_publish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_publish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:text="222"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/shape_rectangle_10_huei"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/text_publish_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请在此写下你对商品的评价"
            android:minLines="6"
            android:gravity="top"
            android:textColor="#A8A8A8"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rectangle_10_huei">
            <ImageView
                android:id="@+id/image_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/common_btn_camera_blue_n_hdpi"/>
        </RelativeLayout>

    <CheckBox
        android:id="@+id/check_publish_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步到圈子"
        android:layout_marginTop="20dp"
        android:textColor="#A8A8A8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2">
        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发表"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_rectangle_red_5"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>